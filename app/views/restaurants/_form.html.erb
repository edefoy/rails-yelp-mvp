<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= simple_form_for [@restaurant] do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: Restaurant::CATEGORIES %>
        <%= f.submit "Add restaurant", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
