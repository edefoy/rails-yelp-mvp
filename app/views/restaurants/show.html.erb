<h1><%= @restaurant.name %></h1>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Reviews</h2>
      <ul>
        <% @restaurant.reviews.each do |review| %>
          <li>
            <p>Rating: <%= review.rating %></p>
            <p>Content: <%= review.content %></p>
            <%= link_to "Edit this review", edit_review_path(review), class: "btn btn-primary" %> :
            <%= link_to "Delete this review", review_path(review), data: { turbo_method: :delete, turbo_confirm: "are you sure?" }, class: "btn btn-primary" %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Back to main page", restaurants_path, class: "btn btn-primary" %> :
      <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %> :
      <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary" %> :
      <%= link_to "Delete this restaurant", restaurant_path(@restaurant), data: { turbo_method: :delete, turbo_confirm: "are you sure?" }, class: "btn btn-primary" %>
    </div>
  </div>
</div>
